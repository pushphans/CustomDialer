<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Contacts" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/backgroundColor</item>
    </style>

    <style name="Theme.Contacts" parent="Base.Theme.Contacts" />

    <style name="WhiteSearchText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WhiteSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Search icon, close icon color -->
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>

        <!-- Hint text color -->
        <item name="android:textColorHint">@android:color/white</item>

        <!-- Input text color -->
        <item name="android:textAppearance">@style/WhiteSearchText</item>

        <!-- Optional background -->
        <item name="android:background">?attr/colorPrimary</item>
    </style>
</resources>